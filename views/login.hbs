<form class="emailForm" action="/" method="post">
  <div class="header-container form-group">
    <h1 class="loginHeader">Account Login</h1>
  </div>
  <div class="email-container form-group">
    <input type="email" class="form-control border-dark" name="email" id="email" aria-describedby="emailHelp"
      placeholder="Email" required>
  </div>
  <div class="form-group">
    <input type="password" class="form-control border-dark" name="password" id="password" placeholder="Password"
      required>
  </div>
  <button type="submit" class="btn btn-outline-dark mt-5" id="signinButton">Sign in</button>
</form>
{{#if isLoginError}}
<div class="alert alert-light alert-dismissible fade show" role="alert">
  <strong style="color: red">{{alert}}</strong>
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
  </button>
</div>
{{/if}}